    <!-- Botón para compartir el ticket como imagen -->
    <button id="share-btn">Compartir Comprobante</button>

    <script>
        // Función para capturar el ticket y convertirlo en imagen
        document.getElementById('share-btn').addEventListener('click', function() {
            html2canvas(document.getElementById('ticket')).then(function(canvas) {
                // Convertir el canvas a imagen en base64
                var imgData = canvas.toDataURL('image/png');

                // Crear un enlace a WhatsApp con la imagen en formato base64
                var message = 'Aquí tienes tu comprobante: ';
                var url = "https://api.whatsapp.com/send?text=" + encodeURIComponent(message) + "&body=" + encodeURIComponent(imgData);
                
                // Abrir el enlace en una nueva ventana o pestaña
                window.open(url, '_blank');
            });
        });
    </script>
