    <!-- Botón para capturar y compartir el comprobante -->
    <button onclick="capturarYCompartir()">Compartir Comprobante</button>

    <script>
        // Función para capturar el comprobante como imagen y compartirlo
        function capturarYCompartir() {
            var elemento = document.getElementById('ticket');

            // Captura el contenido del ticket como imagen
            html2canvas(elemento).then(function(canvas) {
                var imagen = canvas.toDataURL('image/png');
                
                // Descargar la imagen automáticamente
                var enlaceDescarga = document.createElement('a');
                enlaceDescarga.href = imagen;
                enlaceDescarga.download = 'comprobante.png';
                enlaceDescarga.click();

                // Intentar compartir la imagen usando Web Share API (si está disponible)
                if (navigator.share) {
                    canvas.toBlob(function(blob) {
                        var archivo = new File([blob], 'comprobante.png', { type: 'image/png' });
                        navigator.share({
                            title: 'Comprobante de Pago',
                            text: 'Aquí tienes tu comprobante:',
                            files: [archivo]
                        }).catch((error) => {
                            console.log('Error al compartir:', error);
                        });
                    });
                } else {
                    alert('La opción de compartir no está disponible en este dispositivo.');
                }
            });
        }
    </script>
