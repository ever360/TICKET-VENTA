    <!-- Mensaje por WhatsApp -->
    <button id="whatsapp-btn">Compartir por WhatsApp</button>

    <script>
        // Función para capturar el ticket y convertirlo en imagen
        document.getElementById('share-btn').addEventListener('click', function() {
            // Asegurarnos de que el ticket esté visible
            const ticketElement = document.getElementById('ticket');
            
            html2canvas(ticketElement, {
                useCORS: true,  // Asegurarse de que se capturen imágenes externas
                scale: 2        // Mejorar la calidad de la imagen generada
            }).then(function(canvas) {
                // Convertir el canvas a imagen en base64
                var imgData = canvas.toDataURL('image/png');
                
                // Crear un enlace para descargar la imagen
                var link = document.getElementById('download-link');
                link.href = imgData;
                link.download = 'ticket.png';
                link.innerText = 'Descargar Imagen';
                link.style.display = 'block';
            }).catch(function(error) {
                console.error('Error al generar la imagen:', error);
            });
        });

        // Función para generar enlace de WhatsApp
        document.getElementById('whatsapp-btn').addEventListener('click', function() {
            var message = 'Aquí tienes tu comprobante: ' +
                          'Total: $59.00' + '\n' + 
                          'Fecha y Hora: 2024-06-01 10:00:00';
            var url = "https://api.whatsapp.com/send?text=" + encodeURIComponent(message);
            window.open(url, '_blank');
        });
    </script>
